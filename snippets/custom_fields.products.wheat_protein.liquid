{% if product.metafields.custom_fields["wheat_protein"] != blank %}
  <div class="custom-field custom-field__wheat-protein custom-field__type--checkbox">
    <h3 class="custom-field--title">Wheat Protein</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["wheat_protein"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}