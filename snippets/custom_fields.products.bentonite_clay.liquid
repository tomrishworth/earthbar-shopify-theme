{% endcomment %}
{% if product.metafields.custom_fields["bentonite_clay"] != blank %}
  <div class="custom-field custom-field__bentonite-clay custom-field__type--checkbox">
    <h3 class="custom-field--title">Bentonite Clay</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["bentonite_clay"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}