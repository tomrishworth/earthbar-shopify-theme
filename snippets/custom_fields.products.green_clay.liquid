{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/earthbar-nz.myshopify.com/products/configure/130001/edit
{% endcomment %}
{% if product.metafields.custom_fields["green_clay"] != blank %}
  <div class="custom-field custom-field__green-clay custom-field__type--checkbox">
    <h3 class="custom-field--title">Green Clay</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["green_clay"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}